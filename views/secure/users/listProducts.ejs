<div id="productlist-container">
    <h2>Products</h2>
    <% if (message.error) { %>
        <div class="error-container">
            <%= message.error %>
        </div>
    <% } %>
    <% if (message.success) { %>
        <div class="success-container">
            <%= message.success %>
        </div>
    <% } %>
    <% if (authInfo.roles.includes("manager") || authInfo.roles.includes("admin")) { %>
        <a href="/products/create" class="add-link">Add Product</a>
    <% } %>
    <form id="search-form" action="/products" method="get">
        <div class="search-container">
            <input type="text" id="search-input" name="query" placeholder="Search by Name, or Code" />
            <button type="submit" id="search-button">Search</button>
        </div>
    </form>
    <% if (!products || products.length === 0) { %>
        <div>No Products found!</div>
    <% } else { %>
        <table>
            <tr>
                <th>Product Name</th>
                <th></th>
            </tr>
            <% products.forEach((product) => { %>
            <tr>
                <td>
                    <a href="/products/<%= product.name %>"><%= product.name %></a>
                </td>
                <td>
                    <a href="/products/<%= product.name %>/delete" class="delete-link">Delete</a>
                </td>
            </tr>
            <% }); %>
        </table>
    <% } %>
</div>
